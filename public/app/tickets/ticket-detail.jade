.container
    h1
    .row
        .col-md-12
            .panel.panel-primary
                .panel-heading {{ticket.title}}
                .panel-body {{ticket.contents}}
                table.table.table-hover
                    tr
                        th Type
                        td {{ticket.type[0]}}
                    tr
                        th Published
                        td {{ticket.published | date : 'yy년 M월 d일 hh:mm a' : +09}}
                    tr
                        th Writer
                        td {{ticket.user_id}}
                    tr
                        th Company
                        td {{ticket.company}}
                    tr
                        th Comments
                    tr
                        td comment_contents
                        td comment_published
                        td comment_writer
                        td comment_company
    .row
        .col-md-12
            .panel.panel-info
                .panel-heading comment title
                .panel-body comment contents
                table.table.table-hover
                    tr
                        th Published
                    tr
                        th Writer
                    tr
                        th Company
