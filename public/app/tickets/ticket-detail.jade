.container
    h1 {{ticket.title}}
    .row
        .col-md-12
            .panel.panel-primary
                .panel-heading Contents
                .panel-body {{ticket.contents}}
                table.table.table-hover
                    thead.thead-inverse
                        tr(class="table-info")
                            th Type
                            th Published
                            th Writer
                            th Company
                    tbody
                        tr
                            td {{ticket.type[0]}}
                            td {{ticket.published | date : 'yy년 M월 d일 hh:mm a' : +09}}
                            td {{ticket.user_id}}
                            td {{ticket.company}}
